# This file is to unify the coding style for different editors and IDEs
# Get relevant "EditorConfig" plugin to use, see: http://editorconfig.org/#download

root = true

[*]
indent_style = spaces
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
